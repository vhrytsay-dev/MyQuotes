<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dialog_quote_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_quote_text"/>

    <EditText
        android:id="@+id/dialog_quote_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_quote_author"/>

    <EditText
        android:id="@+id/dialog_quote_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_quote_year"/>
</LinearLayout>